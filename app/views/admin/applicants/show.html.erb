<h1> <%= @applicant.name %>'s Application</h1>
<h2>Pets with Pending Applications</h2>
  <% @applicant.pets.each do |pet| %>
    <div id="pet-<%= pet.id %>">
    <p><%= pet.name %></p>
    <p><%= pet.status %></p>
    <%= form_with url: "/admin/applicants/#{@applicant.id}", local: true, method: :patch do |form| %>
          <%= form.hidden_field :pet_id, value: pet.id %>
          <%= form.submit "Approve #{pet.name} for Adoption" %>
        <% end %>
    </div>
  <% end %>